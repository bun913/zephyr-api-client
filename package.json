{
	"name": "zephyr-api-client",
	"version": "0.3.0",
	"description": "Zephyr Server API Client: https://support.smartbear.com/zephyr-scale-server/api-docs/v1/",
	"type": "module",
	"main": "dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsup src/index.ts --format esm --dts --clean",
		"dev": "tsup src/index.ts --format esm --dts --watch",
		"generate": "tsx tools/generate-types.ts",
		"test": "vitest --watch --reporter=verbose --coverage",
		"test:ci": "vitest run --coverage --reporter=verbose",
		"test-api": "tsx src/test-api.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"format": "biome format --write ."
	},
	"keywords": [
		"zephyr",
		"jira",
		"test-management",
		"api-client"
	],
	"author": "bun913",
	"license": "MIT",
	"dependencies": {
		"axios": "^1.12.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/node": "^20.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"dotenv": "^17.2.3",
		"swagger-typescript-api": "^13.2.15",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"files": [
		"dist/",
		"README.md",
		"LICENSE",
		"package.json"
	]
}
